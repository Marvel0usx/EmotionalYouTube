{
    "author": "Harry and Jan",
    "manifest_version": 2,
    "name": "Emotional YouTube",
    "version": "1.0",
    "description": "Emotional YouTube tells you the attitude of comments!",

    "icons": {
        "128": "images/icon128.png",
        "48": "images/icon48.png",
        "16": "images/icon16.png"
    },

    "browser_action": {
        "default_icon": "images/icon128.png",
        "default_popup": "popup.html",
        "default_title": "Emotional YouTube"
    },

    "permissions": [
        "tabs", "activeTab"
    ],

    "web_accessible_resources": ["js/*", "images/*"]
}